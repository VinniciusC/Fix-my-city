<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cenario_Minha_Lista.MinhaLista">
    <LinearLayout
            android:backgroundTint="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/loadingM">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity = "center"
                android:layout_marginHorizontal="120dp"
                android:id="@+id/loadingGif"
        />
    </LinearLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/semItem"
            android:text="Você ainda não adicionou problemas."
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/RvMinhaLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem = "@layout/activity_dificuldade_item"
    />

</FrameLayout>