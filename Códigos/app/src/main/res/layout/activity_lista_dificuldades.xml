<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cenario_Lista.ListaDificuldades">

    <LinearLayout
            android:backgroundTint="#fff"
            android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="visible"
          android:id="@+id/loading">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity = "center"
                android:layout_marginHorizontal="120dp"
                android:id="@+id/loadingGif"
        />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/RvDificuldades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem = "@layout/activity_dificuldade_item"
    />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/NovaDificuldade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:src="@mipmap/ic_add"
            app:fabSize="normal"
            android:backgroundTint="@color/accent"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/MinhaListaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            app:fabSize="normal"
            android:layout_gravity="bottom|left"
            android:backgroundTint="@color/accent"
            android:layout_margin="16dp"
            tools:src="@drawable/ic_list"/>

</FrameLayout>